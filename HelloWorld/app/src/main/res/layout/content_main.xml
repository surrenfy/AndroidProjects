<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context="com.example.prince.helloworld.MainActivity">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_network"
            android:id="@+id/textView0"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <Button android:layout_width="50dp" android:layout_height="40dp"
            android:id="@+id/button"
            android:layout_marginStart="240dp"
            android:text="@string/refresh"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/textView0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi"
            android:id="@+id/textView1"
            android:layout_marginTop="30dp"
            android:layout_marginStart="35dp"/>
    <Switch
            android:layout_width="60dp" android:layout_height="30dp"
            android:id="@+id/switch1"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_marginStart="60dp"/>

    <ScrollView android:layout_width="300dp" android:layout_height="400dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp">
    <TableLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:id="@+id/tableLayout"
            />
    </ScrollView>

</RelativeLayout>
